
  <div class="row">
    <%= render 'users/info', user: @user, book: @book %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td><%= link_to user_path(@user.id) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %><br>
            <%= @user.name %>
            <% end %>
            </td>
            <td><%= link_to @book_show.title %></td>
            <td><%= @book_show.body %></td>
            <td>
              <% if @user == current_user %>
                <%= link_to edit_book_path(@book_show) do %>
                <button class="btn btn-sm btn-success" >Edit</button>
                <% end %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book_show), class:"btn btn-sm btn-danger", method: :delete, data: {confirm: "本当に削除しますか？"} %>
            </td>
              <% else %>
                <td></td>
                <td></td>
              <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>