
 <% if @user.errors.any? %>
  <h1><%= @user.errors.count %>errors prohibited this user from being saved:</h1><br>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
      <div class="form-group">
        <label for="inputName">Name</label><br>
        <%= f.text_field :name, autofocus: true, class: 'form-control', id:"inputName" %>
      </div>
      <div class="form-group">
        <label for="inputImage">Image</label><br>
        <%= f.attachment_field :profile_image %>
      </div>
      <div class="form-group">
        <label for="user_introduction">Introduction</label><br>
        <%= f.text_area :introduction, autofocus: true, class: 'form-control', id:'user_introduction' %>
      </div>
      <div class="form-group">
        <%= f.submit class:"btn btn-secondary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
